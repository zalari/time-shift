{
  "name": "@time-shift/adapter-mite",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "version": "0.0.1",
  "description": "Mite adapter for Time Shift",
  "author": "david.enke@zalari.de",
  "private": true,
  "type": "module",
  "license": "MIT",
  "scripts": {
    "clean": "shx rm -rf dist",
    "test": "jest",
    "build:bundle": "ts-node esbuild.config.ts",
    "build:types": "tsc --declaration --declarationDir dist --emitDeclarationOnly src/index.ts",
    "build": "run-s clean build:*",
    "dev:bundle": "npm run build:bundle -- --watch",
    "dev:types": "npm run build:types -- --watch",
    "dev": "run-p dev:*"
  },
  "dependencies": {
    "@time-shift/common": "workspace:*"
  },
  "devDependencies": {
    "@types/jest": "29.5.1",
    "@types/node": "18.15.12",
    "esbuild": "0.17.17",
    "jest": "29.5.0",
    "node-stdlib-browser": "1.2.0",
    "npm-run-all": "4.1.5",
    "shx": "0.3.4",
    "ts-jest": "29.1.0",
    "ts-node": "10.9.1",
    "typescript": "5.0.4"
  }
}
